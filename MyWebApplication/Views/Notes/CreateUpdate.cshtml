@{
	ViewBag.Title = "Добавление заметки";
}
@model NoteViewModel

<div class="container px-4 py-5" id="hanging-icons">
	<h2 class="pb-2 border-bottom">Добавление заметки</h2>
	<a asp-controller="Notes" asp-action="Index">Главная</a>

	<div class="row g-4 py-5 row-cols-1">
		<div class="p-5 mb-4 bg-light rounded-3">
			<form asp-controller="Notes" asp-action="CreateUpdate" asp-route-id="@Model.Id" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Title" class="control-label">Название</label>
					<input type="text" asp-for="Title" class="form-control" />
					<span asp-validation-for="Title"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description" class="control-label">Описание</label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description"></span>
				</div>
				<br/>
				<div class="form-group">
					@Html.AntiForgeryToken()
					<input type="submit" value="Добавить" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}